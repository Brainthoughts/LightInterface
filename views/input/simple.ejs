<%- include("../partials/header") %>

<br>
<div class="text-center w-50 mx-auto">
    <h1>Display Controller</h1>
    <br>
    <form class="align-items-center" method="POST">
        <div class="row g-3">
            <div class="col-auto">
                <label for="textColor" class="col-form-label">Text Color:</label>
            </div>
            <div class="col-auto">
                <input type="color" id="textColor" name="textColor" class="form-control form-control-color" value="<%- display.textHexColor %>">
            </div>
        </div>
        <div class="row g-3">
            <div class="col-auto">
                <label for="borderColor" class="col-form-label">Border Color:</label>
            </div>
            <div class="col-auto">
                <input type="color" id="borderColor" name="borderColor" class="form-control form-control-color" value="<%- display.borderHexColor %>">
            </div>
        </div>
        <div class="row g-3">
            <div class="col-auto">
                <label for="message" class="col-form-label">Message:</label>
            </div>
            <div class="col-auto">
                <input type="text" id="message" name="message" class="form-control" value="<%- display.message %>">
            </div>
        </div>
        <div class="row g-3">
            <div class="col-auto">
                <label for="brightness" class="col-form-label">Brightness:</label>
            </div>
            <div class="col-auto">
                <input type="number" id="brightness" name="brightness" class="form-control" min=0 max=255 value="<%- display.brightness %>">
            </div>
        </div>
        <div class="row g-3">
            <div class="col-auto">
                <label for="speed" class="col-form-label">Speed:</label>
            </div>
            <div class="col-auto">
                <input type="text" id="speed" name="speed" class="form-control" value="<%- display.speed %>">
            </div>
        </div>
        <br>
        <div class="col-auto">
            <button type="submit" class="btn btn-primary mb-3">Update</button>
        </div>
    </form>
</div>
<%- include("../partials/footer") %>